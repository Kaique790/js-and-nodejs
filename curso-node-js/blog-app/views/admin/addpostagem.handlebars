{{#each erros}}
    <div class="aler alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h1>Adicionar postagem</h1>
        <form action="/admin/postagem/nova" method="post">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" id="titulo">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control">

            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" id="conteudo" class="form-control" style="resize: none;"></textarea>
            <br>

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="form-control">
                <option selected>Escolha uma opção... </option>
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>

                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>

            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>

        </form>
    </div>
</div>  